<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CarInfoActivity">

    <!--主框架-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <com.youth.banner.Banner
            android:id="@+id/car_info_banner"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号："
                android:textColor="@color/black"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/car_info_txt_car_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="闽D-A123456"
                android:textSize="25sp"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/car_info_txt_car_brand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="奔驰"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:text="类型："
                android:textSize="20sp" />

            <TextView
                android:id="@+id/car_info_txt_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="suv型轿车"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="限座人数:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/car_info_txt_car_seating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7人"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"

            >

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/car_info_txt_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.00"
                android:textColor="#f00"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="元/每小时"
                android:textColor="#000"
                android:textSize="20sp" />

        </LinearLayout>


    </LinearLayout>
    <!--主框架结束-->


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/car_info_btn_add_date"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="前往预约" />

        <Button
            android:id="@+id/car_info_btn_add_order"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:text="立即租车" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>